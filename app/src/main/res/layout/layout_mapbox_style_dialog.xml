    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:textColor="@color/black"
            android:text="Dark"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:textColor="@color/black"
            android:text="Light"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_weight="1"

            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:textColor="@color/black"
            android:text="Streets"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:textColor="@color/black"
            android:text="Satellite"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/main_500"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_bus_center_green"
                    />


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/toggleCenters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="start"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:thumb="@drawable/selector_thumb_green"
                    app:track="@drawable/selector_track_green"
                    android:elevation="15dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Bus Centers"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/main_500"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_bus_station_red"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/toggleStations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:elevation="15dp"
                    app:track="@drawable/selector_track_red"
                    android:thumb="@drawable/selector_thumb_red"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Bus Stops (Stations)"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textSize="13sp"
                android:layout_marginBottom="5dp"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</LinearLayout>
